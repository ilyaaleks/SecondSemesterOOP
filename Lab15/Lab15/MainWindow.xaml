<Window x:Class="Lab15.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Lab15"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*"></ColumnDefinition>
            <ColumnDefinition Width="8*"></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <Button Name="WorkButton" Grid.Column="0" VerticalAlignment="Center" Content="Show" Click="ShowWork"></Button>
        <TextBlock Name="ExampleBlock" Grid.Column="1" Height="420" VerticalAlignment="Top" Width="Auto"></TextBlock>
        <Button Name="ShowStateButton" Grid.Column="0" VerticalAlignment="Top" Content="Show current state"
                Click="ShowObjectState"></Button>
        <Button Name="ChangeStateButton" Grid.Column="0" VerticalAlignment="Bottom" Content="Change state"
                Click="ChangeObjectState"></Button>
    </Grid>
</Window>
